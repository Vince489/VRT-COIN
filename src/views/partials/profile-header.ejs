<!-- partials/profile-header -->

<header class="flex items-center justify-between bg-[#1E1E1E] text-white px-4 py-2 mb-4">
  <!-- User's Name -->
  <div class="text-center flex-grow">
    <h1 class="text-xl font-bold"><%= user.name || '' %></h1>
  </div>

  <!-- Hamburger Menu Button -->
  <button 
  id="hamburger-button"
  class="bg-[#1E1E1E] p-2 rounded-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-cyan-400"
  aria-label="Menu">
  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
  </svg>
</button>

</header>

<div id="menu" class="hidden absolute top-12 right-4 bg-[#2A2A2A] text-white rounded-md shadow-md">
  <ul class="py-2">
    <li class="px-4 py-2 hover:bg-gray-600"><a href="/settings">Settings</a></li>
    <li class="px-4 py-2 hover:bg-gray-600"><a href="/logout">Logout</a></li>
  </ul>
</div>

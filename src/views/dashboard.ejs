<div class="flex items-center justify-center min-h-screen">
    <div class="bg-gray-800 p-6 rounded-lg shadow-md w-full max-w-md text-center">
      <h1 class="text-2xl font-bold text-gray-100 mb-4">Dashboard</h1>
      <p class="text-gray-300 text-lg">Welcome to the dashboard, <span class="font-semibold text-white"><%= userName %></span>!</p>
      <button 
        onclick="document.getElementById('editProfileModal').classList.remove('hidden')" 
        class="mt-6 w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
      >
        Edit Profile
      </button>
    </div>
  
    <!-- Edit Profile Modal -->
    <div id="editProfileModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center z-50">
      <div class="bg-gray-800 p-6 rounded-lg shadow-md w-full max-w-sm">
        <h2 class="text-xl font-bold text-gray-100 mb-4 text-center">Edit Profile</h2>
        <form action="/api/v1/user/edit" method="POST" class="space-y-4">
          <div>
            <label for="newUserName" class="block text-sm font-medium text-gray-300 mb-1">New Username:</label>
            <input 
              type="text" 
              name="newUserName" 
              id="newUserName" 
              placeholder="Enter new username" 
              class="w-full px-4 py-2 bg-gray-700 text-gray-100 border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-green-400"
            >
          </div>
          <div>
            <label for="newPassword" class="block text-sm font-medium text-gray-300 mb-1">New Password:</label>
            <input 
              type="password" 
              name="newPassword" 
              id="newPassword" 
              placeholder="Enter new password" 
              class="w-full px-4 py-2 bg-gray-700 text-gray-100 border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-green-400"
            >
          </div>
          <button 
            type="submit" 
            class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-green-400"
          >
            Save Changes
          </button>
        </form>
        <button 
          onclick="document.getElementById('editProfileModal').classList.add('hidden')" 
          class="mt-4 w-full bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-red-400"
        >
          Cancel
        </button>
      </div>
    </div>
  </div>
  
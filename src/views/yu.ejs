<div class="container mx-auto p-6">
    <!-- Header -->
    <header class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-50">Virtron App Roadmap for MVP</h1>
      <p class="text-gray-400 text-lg">Start Date: 1/15/25</p>
    </header>
  
    <!-- Roadmap Sections -->
    <div class="space-y-8">
      <!-- Only dynamic sections now -->
      <% roadmapSections.forEach((section, index) => { %>
      <section>
        <h2 class="text-2xl font-semibold text-gray-50 border-b border-gray-700 pb-2">
          <%= section.title %>
        </h2>
        <p class="mt-2 text-gray-300">
          <strong>Goal:</strong> <%= section.goal %>
        </p>
        <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-lg font-medium text-gray-200 mb-2">Tasks:</h3>
            <ul class="list-disc pl-5 space-y-1 text-gray-300">
              <% section.tasks.forEach(task => { %>
                <li><%= task %></li>
              <% }); %>
            </ul>
          </div>
          <div>
            <h3 class="text-lg font-medium text-gray-200 mb-2">Actions:</h3>
            <ul class="list-disc pl-5 space-y-1 text-gray-300">
              <% section.actions.forEach(action => { %>
                <li><%= action %></li>
              <% }); %>
            </ul>
          </div>
        </div>
        <p class="mt-4 text-sm text-gray-400">
          <strong>Timeframe:</strong> <%= section.timeframe %>
        </p>
      </section>
      <% }); %>
    </div>
  </div>
  